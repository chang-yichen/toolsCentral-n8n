# Enable the AWS Bedrock integration with Claude LLM for workflow descriptions
ANTHROPIC_ENABLED=true

# AWS credentials for Bedrock
ANTHROPIC_AWS_ACCESS_KEY_ID=your_aws_access_key_here
ANTHROPIC_AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
ANTHROPIC_AWS_REGION=ap-southeast-1

# Optional: Specify a different Claude model
ANTHROPIC_MODEL=anthropic.claude-3-5-sonnet-20240620-v1:0

# For using standard AWS credentials instead of specific Anthropic ones
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=ap-southeast-1 